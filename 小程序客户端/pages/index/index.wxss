/* pages/index/index.wxss */
page{
  width:100%;
  height:100%;
}
#map{
  width:100%;
  height:100%;
}
.{
  background-color:white;
  height: 120px;
  /* //margin-top: 110%; */
  width: 90%;
  margin-left: 5%
}


.table {
  border: 0px solid darkgray;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 2rem;
  align-items: center;
}
.td {
    width:40%;
    justify-content: center;
    text-align: center;
    font-size:18px;
}
.td1 {
    width:40%;
    justify-content: center;
    text-align: center;
     font-size:12px;
}
.td2{
  font-size:16px;
}
.td3{
  color: #b21212
}
.selectcolor{
  color: rgb(51, 150, 251);
}
.th {
  width: 40%;
  justify-content: center;
  display: flex;
  height: 2rem;
  align-items: center;
  font-size: smaller;
}
.line{
margin: 0 auto;
width: 100%;
height: 2rpx;
background-color: rgb(51, 150, 251);
}
.k{
  width: 10%
}
.h{
  margin-top: 10px;
}
.btn{
   width: 20%;
  border-radius: 20px;
  background-color: rgb(51, 150, 251);
  color: white;
   font-size: 16px;
}
.img{
  margin-bottom: -5px;
}

#newimage{
   width: 30px;
  height: 30px;
  position: fixed;
  right: 3%;
  bottom: 30%; 
}
#newimage>image{
  width: 100%;
  height: 100%
}
.animationDatass{
  animation: updata 80ms linear infinite
}
@keyframes updata{
  0% {transform: rotate(360deg)}
  100% {transform: rotate(0deg)}
}
.Weather{
  width:100%;
  height:80rpx;
  background-color:rgba(255, 255, 255, 0.5);
  position: fixed;
  top:0;
  line-height: 80rpx;
  padding-left:20rpx; 
  font-size: 32rpx;
}
/* 搜索 */
.sousuo{
  line-height: 30px;
  height:30px;
  width:100%; 
  background-color:#fff;
  padding:5px 0;
}
.sousuo input{
    height: 30px;
    line-height: 30px;
    background: #eee;
    width:80%;
    border-radius: 25px;
    padding-left: 15px;
    margin: 0 0;
    float: left;
    margin-left:2.5%; 
    font-size: 14px;
}
.sousuo image{
  width:25px;
  height: 25px;
  margin: 2.5px;
   margin-left:10px;
}
.place-holder{
  color:#bbb;
}
#looking{
  position: absolute;
  top:100rpx;
  width:200rpx;
  font-size: 30rpx;
  background: rgba(51, 150, 251, 0.5);
  color:#fff;
  line-height: 60rpx;
  text-align: center;
  padding:10rpx  40rpx;
  border-radius:30rpx; 
  left: 30rpx;
}

